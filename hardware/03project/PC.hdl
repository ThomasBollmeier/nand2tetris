/**
 * A 16-bit counter.
 * if      reset(t): out(t+1) = 0
 * else if load(t):  out(t+1) = in(t)
 * else if inc(t):   out(t+1) = out(t) + 1
 * else              out(t+1) = out(t)
 */
CHIP PC {
    IN in[16], reset, load, inc;
    OUT out[16];
    
    PARTS:
    Or(a=load, b=reset, out=load1);
    Or(a=load1, b=inc, out=regLoad);
    Mux16(a=tmp1, b=false, sel=reset , out=regIn);
    Mux16(a=tmp2, b=in , sel=load, out=tmp1);
    Mux16(a=regOut, b=regOutInc, sel=inc, out=tmp2);
    Inc16(in=regOut, out=regOutInc);
    Register(in=regIn, load=regLoad, 
        out=regOut, out=out);      
}